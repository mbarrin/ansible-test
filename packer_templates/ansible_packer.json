{
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "eu-west-1",
        "source_ami": "ami-2f96855b",
        "instance_type": "m1.medium",
        "ssh_username": "ubuntu",
        "ami_name": "ansible-local-{{timestamp}}"
    }],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "sudo apt-get update",
                "sudo apt-get upgrade -y",
                "sudo apt-get install python-pip",
                "sudo pip install -I ansible==1.3.1"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "provisioning/site/local.yml",
            "role_paths": [
                "provisioning/site/roles/common",
                "provisioning/site/roles/devtools",
                "provisioning/site/roles/java",
                "provisioning/site/roles/tomcat7"
            ]
        }
    ],
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    }
}
